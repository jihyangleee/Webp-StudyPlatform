<!DOCTYPE html>
<html>

<head>
  <!-- main  -->
  <meta charset="UTF-8" />
  <title>SPARK - 로그인</title>
  <link rel="stylesheet" href="/stylesheets/login.css" />
  <script src="https://developers.kakao.com/sdk/js/kakao.js"></script>
  <link rel="icon" href="images/favicon.png" type="image/png">
</head>

<body>
  <div class="login-wrapper">
    <div style="display: flex; justify-content: space-between;">
      <span>S</span>
      <span>P</span>
      <span>A</span>
      <span>R</span>
      <span>K</span>
      <span>!</span>
    </div>
    <h1>SPARK - 우리의 스터디 파크에 오신 것을 환영합니다!</h1>
    <p>여정을 함께 할 인연을 만들어 보세요</p>
    <div class="button-wrapper">
      <!-- <button class="mainPage">메인페이지</button>
            <button class="mypage">마이페이지</button> -->
      <button id="loginBtn" class="kakao-btn" onclick="loginWithKakao()">로그인</button>
      <button id="logoutBtn" class="kakao-btn" onclick="logout()" style="display: none;">로그아웃</button>
    </div>
    </header>

    <p id="welcomeMsg"></p>

    <script>
  Kakao.init('<%= kakaoKey %>');  // 서버에서 전달된 키 사용
  let isLoggingIn = false;

  function loginWithKakao() {
    if (isLoggingIn) return;

    isLoggingIn = true;
    Kakao.Auth.login({
      throughTalk: false, // ← 이걸 꼭 추가!
      success: function (authObj) {
        fetch('/kakao', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ token: authObj.access_token }),
          credentials: 'include' // 쿠키 전송 허용
        })
        .then(res => res.json())
        .then(data => {
          // 서버가 돌려준 username을 localStorage에 저장
          localStorage.setItem('username', data.username);
          localStorage.setItem('userId', data.userId); // ← 필요 시 서버에서 같이 내려보냄

          showWelcome();

          // 로그인 후 이동
          window.location.href = '/studyR/webP';
        })
        .finally(() => {
          isLoggingIn = false;
        });
      },
      fail: function (err) {
        alert(JSON.stringify(err));
        isLoggingIn = false;
      }
    });
  }

function logout() {
  fetch('/logout', {
    method: 'POST',
    credentials: 'include'
  }).then(() => {
    localStorage.clear();
    document.cookie = 'currentUserName=; Max-Age=0';

    Kakao.Auth.logout(function () {
      console.log('카카오 access token 삭제 완료');
      window.location.href = '/login'; // 또는 reload
    });
  });
}

  function showWelcome() {
    const username = localStorage.getItem('username');
    if (username) {
      document.getElementById('welcomeMsg').textContent = `환영합니다, ${username}님!`;
      document.getElementById('loginBtn').style.display = 'none';
      document.getElementById('logoutBtn').style.display = 'inline-block';
    }
  }

  // 페이지 로딩 시
  window.onload = showWelcome;
</script>

</body>

</html>