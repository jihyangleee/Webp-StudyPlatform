<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>카카오 로그인</title>
  <script src="https://developers.kakao.com/sdk/js/kakao.js"></script>
</head>
<body>
  <h1>카카오 로그인 테스트</h1>
  <button id="loginBtn" onclick="loginWithKakao()">카카오로 로그인</button>
  <button id="logoutBtn" onclick="logout()" style="display: none;">로그아웃</button>

  <p id="welcomeMsg"></p>

  <script>
    Kakao.init('<%=kakaoKey%>');  // 서버에서 전달받은 카카오 키 삽입
    let isLoggingIn = false;

    function loginWithKakao() {
      if (isLoggingIn) return;

      isLoggingIn = true;
      Kakao.Auth.login({
        success: function(authObj) {
          fetch('/kakao', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ token: authObj.access_token })
          })
          .then(res => res.json())
          .then(data => {
            localStorage.setItem('jwt', data.token);
            localStorage.setItem('username', data.username);
            showWelcome();
          })
          .finally(() => {
            isLoggingIn = false;
          });
        },
        fail: function(err) {
          alert(JSON.stringify(err));
          isLoggingIn = false;
        }
      });
    }

    function logout() {
      localStorage.removeItem('jwt');
      localStorage.removeItem('username');
      showWelcome();
    }

    function showWelcome() {
      const username = localStorage.getItem('username');
      if (username) {
        document.getElementById('welcomeMsg').innerText = `환영합니다, ${username}님`;
        document.getElementById('loginBtn').style.display = 'none';
        document.getElementById('logoutBtn').style.display = 'inline-block';
      } else {
        document.getElementById('welcomeMsg').innerText = '';
        document.getElementById('loginBtn').style.display = 'inline-block';
        document.getElementById('logoutBtn').style.display = 'none';
      }
    }

    window.onload = showWelcome;
  </script>
</body>
</html>
